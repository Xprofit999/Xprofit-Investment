<%-include('partials/dashNav')-%>
<div class="plan deposit <%=extra%>">
    <a href="/deposit-history/<%=userDetails._id%>">Deposit History</a>
    <form action="/deposit/primary/<%=userDetails._id%>" method="post" class="form primaryForm">
        <div class="form-head">
            <h3>Primary Plan || <%=message%></h3>
            <a href="#" class="closePrimary">
                <i class="fa fa-close"></i>
            </a>
        </div>
        <div class="form-body">
            <label for="Amount">Enter Amount:</label>
            <div class="input">
                <input type="number" name="amount" id="amount" placeholder="0.00" required>
                <p>USD</p>
            </div>
        </div>
        <div class="form-footer">
            <a href="#" class="closePrimary">Close</a>
            <button type="submit">Next</button>
        </div>
    </form>

    <form action="/deposit/secondary/<%=userDetails._id%>" method="post" class="form secondaryForm">
