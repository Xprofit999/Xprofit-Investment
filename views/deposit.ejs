            <a href="#" class="closeSecondary">
                <i class="fa fa-close"></i>
            </a>
        </div>
        <div class="form-body">
            <label for="Amount">Enter Amount:</label>
            <div class="input">
                <input type="number" name="amount" id="amount" placeholder="0.00" required>
                <p>USD</p>
            </div>
        </div>
        <div class="form-footer">
            <a href="#" class="closeSecondary">Close</a>
            <button type="submit">Next</button>
        </div>
    </form>

    <form action="/deposit/premium/<%=userDetails._id%>" method="post" class="form premiumForm">
        <div class="form-head">
            <h3>Premium Plan || <%=message%></h3>
            <a href="#" class="closePremium">
                <i class="fa fa-close"></i>
            </a>
        </div>
        <div class="form-body">
            <label for="Amount">Enter Amount:</label>
            <div class="input">
                <input type="number" name="amount" id="amount" placeholder="0.00" required>
                <p>USD</p>
            </div>
        </div>
        <div class="form-footer">
            <a href="#" class="closePremium">Close</a>
            <button type="submit">Next</button>
        </div>
    </form>

    <div class="plans_head">
        <h2 data-aos="fade-left" data-aos-duration="1500">Our Investment Plans</h2>
        <p data-aos="fade-right" data-aos-duration="1500">Explore our well tailored and premium Investment offers for various budgets and expertise levels, guaranteed to get you started on your investment journey.</p>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500" class="plan">
        <div class="plan_head">
            <h3>PRIMARY PLANS</h3>
        </div>
        <div class="plan_body">
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $500 TO GET $2,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $600 TO GET $2,400</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $700 TO GET $3,200</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $1,000 TO GET $9,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-history"></i>
                <p>2 DAYS MAX</p>
            </div>
            <a href="#" id="selectPrimary">SELECT PLAN</a>
        </div>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500" class="plan">
        <div class="plan_head">
            <h3>SECONDARY PLANS</h3>
        </div>
        <div class="plan_body">
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $2,000 TO GET $10,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $3,000 TO GET $15,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $4,000 TO GET $20,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $5,000 TO GET $25,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $10,000 TO GET $50,500</p>
            </div>
            <div class="detail">
                <i class="fa fa-history"></i>
                <p>3 DAYS MAX</p>
            </div>
            <a href="#" id="selectSecondary">SELECT PLAN</a>
        </div>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500" class="plan heavy">
        <div class="plan_head">
            <h3>PREMIUM PLANS</h3>
        </div>
        <div class="plan_body">
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $1,000 TO GET $4,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $2,000 TO GET $8,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $3,000 TO GET $12,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $4,000 TO GET $20,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $5,000 TO GET $20,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-money"></i>
                <p>INVEST $10,000 TO GET $40,000</p>
            </div>
            <div class="detail">
                <i class="fa fa-history"></i>
                <p>24 HOURS MAX</p>
            </div>
            <a href="#" id="selectPremium">SELECT PLAN</a>
        </div>
    </div>
    <div class="detail popUp">
        <h3>Logout</h3>
        <p>Are you want to logout?</p>
        <div class="buttons">
            <a href="#" id="cancel">Cancel</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
</div>
<script>
    const logoutBtns = document.querySelectorAll('.logout');
    const dashboard = document.querySelector('.deposit');
    const cancelBtn = document.querySelector('#cancel');
    const selectPrimary = document.querySelector('#selectPrimary');
    const selectSecondary = document.querySelector('#selectSecondary');
    const selectPremium = document.querySelector('#selectPremium');
    const closePrimary = document.querySelectorAll('.closePrimary');
    const closeSecondary = document.querySelectorAll('.closeSecondary');
    const closePremium = document.querySelectorAll('.closePremium');
    logoutBtns.forEach(logout=> {
        logout.addEventListener('click', ()=> {
            dashboard.classList.add('pop');
            body.classList.remove('burger');
            dashboard.classList.remove('primary');
            dashboard.classList.remove('secondary');

        });
    });
    cancelBtn.addEventListener('click', ()=> {
        dashboard.classList.remove('pop');
    });
    selectPrimary.addEventListener('click', ()=> {
        dashboard.classList.add('primary');
        body.classList.remove('burger');
        dashboard.classList.remove('pop');
        dashboard.classList.remove('secondary');
    });

    selectSecondary.addEventListener('click', ()=> {
        dashboard.classList.add('secondary');
        dashboard.classList.remove('primary');
        body.classList.remove('burger');
        dashboard.classList.remove('pop');
    });

    selectPremium.addEventListener('click', ()=> {
        dashboard.classList.add('premium');
        dashboard.classList.remove('secondary');
        dashboard.classList.remove('primary');
        body.classList.remove('burger');
        dashboard.classList.remove('pop');
    });

    closePrimary.forEach(closeBtn=> {
        closeBtn.addEventListener('click', ()=> {
            dashboard.classList.remove('primary');
        });
    });

    closeSecondary.forEach(closeBtn=> {
        closeBtn.addEventListener('click', ()=> {
            dashboard.classList.remove('secondary');
        });
    });

    closePremium.forEach(closeBtn=> {
        closeBtn.addEventListener('click', ()=> {
            dashboard.classList.remove('premium');
        });
    });
</script>
